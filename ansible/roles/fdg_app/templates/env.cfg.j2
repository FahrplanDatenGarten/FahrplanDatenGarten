[general]
database_url = postgres://{{ fdg_postgresql_user }}:{{ fdg_postgresql_password }}@{{ fdg_postgresql_host }}:5432/{{ fdg_postgresql_database }}
debug = False
secret_key = {{ fdg_app_secret }}
static_root = {{ fdg_static_root_path }}
allowed_hosts = {{ ansible_fqdn }},fahrplandatengarten.de,www.fahrplandatengarten.de,127.0.0.1,::1

[celery]
result_backend = redis://:{{ fdg_redis_password }}@{{ fdg_redis_host }}:6379/0
broker_url = redis://:{{ fdg_redis_password }}@{{ fdg_redis_host }}:6379/0
task_ignore_result = true
task_store_errors_even_if_ignored = true

[caching]
backend = django.core.cache.backends.filebased.FileBasedCache
location = {{ fdg_cache_root_path }}

[periodic]
timetables = *,*/15
journeys = *,5
